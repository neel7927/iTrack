<div class="footer">

  <% if user_signed_in? %>
  <% @account = Account.find(current_user.account.id) %>
  <div class="footer-icons">

    <%= link_to accounts_path do %>
      <i class="material-icons">home</i>
    <% end %>

  </div>

  <div class="footer-icons">
    <%= link_to new_account_path do %>
      <i class="material-icons">account_balance_wallet</i>
    <% end %>
  </div>

  <div class="footer-icons" data-controller="footer">
        <div style="margin-bottom: -26px;">
          <ul id="footerMenu">
        <li>
          <ul class="dropupMenu" data-footer-target="dropup">
            <li><%= link_to "Add an account", new_account_path %></li>
            <li><%= link_to "Add a budget", new_account_budget_path(@account) %></li>
          </ul>
        </li>
      </ul>
    </div>
    <div>
      <i class="material-icons" data-action="click->footer#clickdropupMenu">add_circle</i>
    </div>
  </div>



  <div class="footer-icons">

    <%= link_to account_transactions_path(@account) do %>
      <i class="material-icons">search</i>
    <% end %>
  </div>



  <div class="footer-icons">
    <%= link_to account_budgets_path(@account) do %>
      <i class="fa fa-check-circle"></i>
    <% end %>
  </div>
        <% else %>
          <footer hidden="hidden">
        <% end %>
    </div>
 </div>
